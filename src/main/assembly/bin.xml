<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>tar.bz2</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>LICENSE.txt</include>
        <include>README.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/scripts</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
        <exclude>*.bat</exclude>
      </excludes>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/main/scripts</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*.bat</include>
      </includes>
      <fileMode>0644</fileMode>
      <lineEnding>dos</lineEnding>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>target/${artifactId}-${version}.jar</source>
      <outputDirectory>/lib/</outputDirectory>
      <destName>${artifactId}.jar</destName>
      <!-- Change to 0644 when Maven bug MASSEMBLY-104 is fixed -->
      <fileMode>420</fileMode>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>de.ailis.wlandsuite:wlandsuite</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>